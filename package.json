{
  "name": "web-scraper-app",
  "version": "1.0.0",
  "description": "Full-stack web scraper application with React frontend and Node.js backend",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon api/server.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node api/server.js",
    "preview": "cd client && npm run preview",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "test-api": "curl http://localhost:5000/api/health",
    "clean": "rimraf client/dist client/build node_modules/*/node_modules",
    "vercel-build": "npm run install-client && npm run build"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "puppeteer": "^24.15.0",
    "sqlite3": "^5.1.7",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "web-scraper",
    "react",
    "express",
    "sqlite",
    "vercel"
  ],
  "author": "",
  "license": "MIT"
}
